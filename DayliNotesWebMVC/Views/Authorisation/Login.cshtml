@{
}
@model Client
<style>
    .container {
        display: flex; 
        justify-content: center; 
        align-items: center; 
        height: 80vh; 
    }

    .centered-div {
        justify-content: center; 
        align-items: center;

    }

    html {
        overflow: hidden;
    }

    .text{
        color: #3CB371;
    }
</style>
<body>
    <div class="container">
        <div class="centered-div">
            <h1 class="text">Авторизация</h1>
            <form asp-action="Login" asp-controller="Authorisation" method="post">
                <div class="centered-div">
                    <p>
                    <input asp-for="Login" placeholder="Login"/>
                    <span asp-validation-for="Login"></span>
                </p>
                <p>
                    <input type="password" name="Password" placeholder="Password" />
                    <span asp-validation-for="Password"></span>
                </p>
                <p>
                    <input type="submit" value="Войти" />
                </p>
                </div>
            </form>
        </div>
    </div>
</body>